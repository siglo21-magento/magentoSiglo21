<script type="text/javascript">
	requirejs([
				'require',
				'jquery',
				'mgsisotope',
				'mgsvisible',
				'mgsowlcarousel'
			], function(require, $, Isotope) {
				require(['bridget'], function(jQueryBridget) {
						// Make masonry for loading page finish
						jQueryBridget('isotope', Isotope, $);
						if ($(window).width() >= 768) {
							$('.blog-list-masorry').isotope({
								itemSelector: '.blog-post',
								columnWidth: '.blog-post',
								horizontalOrder: true,
								transitionDuration: '0.8s'
							});
						}

							// Make masonry for filter.

							$(".menu-cat > li > a").on("click", function(event) {
								event.preventDefault();
								if ($(window).width() >= 768) {
									$(".menu-cat > li > a").removeClass("active-filter-block");
									$(this).addClass("active-filter-block");
									var $id = $(this).attr('id');
									if ($id == 'show-all') {
										$('.blog-list-masorry').isotope({
											filter: '.blog-post'
										});
									} else {
										var selector = ".blog-post" + "." + $id;
										$('.blog-list-masorry').isotope({
											filter: selector
										});
									}
								} else {
									$('.blog-list-masorry').isotope('destroy');
									$(".menu-cat > li > a").removeClass("active-filter-block");
									$(this).addClass("active-filter-block");
									var $id = $(this).attr('id');
									var selector = ".blog-post" + "." + $id;
									if ($id == 'show-all') {
										$('.blog-post').show();
									} else {
										$('.blog-post').hide();
										$(selector).show();
									}

								}

							});
						});
				});
</script>
					</li>
				<?php endforeach ?>
			<?php endif ?>
		</ul>
	</nav>
</div>
<script type="text/javascript">
	require([
		'jquery'
	], function(jQuery){
		(function($) {
			$(".nav-responsive").click(function(){
				$(".navigation").toggleClass('nav-active');
			});
		})(jQuery);
	});
</script>
<?php endif ?>
    <body>
        <referenceContainer name="content">
            <referenceBlock name="product.info.addtocart">
                <block class="Aheadworks\Ctq\Block\QuoteList\ProductList\Item\AddButton"
                       name="aw_ctq.product.info.addtoquotelist"
                       as="to_quote_list"
                       template="Aheadworks_Ctq::product/view/addtoquotelist.phtml"
                       before="-">
                    <arguments>
                        <argument name="quote_list_view_model" xsi:type="object">Aheadworks\Ctq\ViewModel\QuoteList\AddButton</argument>
                    </arguments>
                </block>
            </referenceBlock>
            <referenceBlock name="product.info.addtocart.additional">

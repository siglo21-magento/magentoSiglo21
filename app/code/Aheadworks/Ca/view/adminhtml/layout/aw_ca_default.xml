<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.main.actions">
            <block class="Aheadworks\Ca\Block\Adminhtml\Page\Menu" name="aw_ca_menu">
                <block class="Aheadworks\Ca\Block\Adminhtml\Page\Menu\Item" name="aw_ca_menu_item.rules">
                    <arguments>
                        <argument name="path" xsi:type="string">*/company/index</argument>
                        <argument name="label" xsi:type="string">Companies</argument>
                        <argument name="resource" xsi:type="string">Aheadworks_Ca::companies</argument>
                        <argument name="controllers" xsi:type="array">
                            <item name="0" xsi:type="string">company</item>
                        </argument>
                    </arguments>
                </block>
                <block class="Aheadworks\Ca\Block\Adminhtml\Page\Menu\Item" name="aw_ca_menu_item.settings">
                    <arguments>
                        <argument name="path" xsi:type="string">adminhtml/system_config/edit/section/aw_ca</argument>
                        <argument name="label" xsi:type="string">Settings</argument>
                        <argument name="resource" xsi:type="string">Aheadworks_Ca::config_aw_ca</argument>
                    </arguments>
                </block>
                <block class="Aheadworks\Ca\Block\Adminhtml\Page\Menu\Item" name="aw_ca_menu_item.readme">
                    <arguments>
                        <argument name="label" xsi:type="string">Readme</argument>
                        <argument name="link_attributes" xsi:type="array">
                            <item name="href" xsi:type="string">https://aheadworks.atlassian.net/wiki/spaces/EUDOC/pages/1352663084/Company+Accounts+-+Magento+2</item>
                            <item name="target" xsi:type="string">_blank</item>
                            <item name="class" xsi:type="string">separator</item>
                        </argument>
                    </arguments>
                </block>
                <block class="Aheadworks\Ca\Block\Adminhtml\Page\Menu\Item" name="aw_ca_menu_item.support">
                    <arguments>
                        <argument name="label" xsi:type="string">Get Support</argument>
                        <argument name="link_attributes" xsi:type="array">
                            <item name="href" xsi:type="string">http://ecommerce.aheadworks.com/contacts/</item>
                            <item name="target" xsi:type="string">_blank</item>
                        </argument>
                    </arguments>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>

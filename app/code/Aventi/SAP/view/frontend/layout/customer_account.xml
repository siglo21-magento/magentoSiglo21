<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Aventi_SAP::css/invoices.css"/>
    </head>
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Aventi\SAP\Block\Customer\Link"
                   name="customer_account_navigation_invoice_link"
                   after="customer-account-navigation-orders-link">
                <arguments>
                    <argument name="path" xsi:type="string">sap/invoice</argument>
                    <argument name="label" xsi:type="string">My Invoices</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
